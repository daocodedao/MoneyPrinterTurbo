    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "module":"streamlit",
            "args": [
                "run",
                "${file}",
                "--browser.serverAddress",
                "0.0.0.0",
                "--server.enableCORS",
                "True",
                "--browser.gatherUsageStats",
                "False"
           ]
        }
    ]
}